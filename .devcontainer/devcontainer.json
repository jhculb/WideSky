// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.222.0/containers/python-3-miniconda
{
    "name": "Python Environment with Docker-in-docker",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--init"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
    ],
    "overrideCommand": false,
    "remoteEnv": {
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "editorconfig.editorconfig",
                "github.vscode-pull-request-github",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vsliveshare.vsliveshare",
                "ms-vscode.makefile-tools",
                "charliermarsh.ruff",
                "ryanluker.vscode-coverage-gutters",
                "tamasfe.even-better-toml",
                "ms-vscode.makefile-tools"
                //"sonarsource.sonarlint-vscode",
                // Optional suggestions:
                // "visualstudioexptteam.vscodeintellicode",
                // "njpwerner.autodoc",
                // "ms-toolsai.jupyter",
                // "ms-toolsai.vscode-jupyter-cell-tags",
                // "ms-toolsai.jupyter-renderers",
                // "donjayamanne.python-environment-manager",
                // "eamodio.gitlens",
                // "aaron-bond.better-comments",
                // "mikestead.dotenv"
                // "GitHub.copilot",
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    // TODO: Inject precommit as env
    "onCreateCommand": "sudo chown -R vscode .git && pip install pre-commit==4.2.0 && pre-commit install-hooks",
    "remoteUser": "vscode"
}